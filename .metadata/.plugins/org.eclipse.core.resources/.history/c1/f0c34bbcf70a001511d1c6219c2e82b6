grammar net.certware.argument.language.L with org.eclipse.xtext.common.Terminals

generate l "http://www.certware.net/argument/language/L"

Model:
	sentences += Sentence*
;
	
Sentence:
	Atom |
	Expression
;	

Atom:
	PredicateAtom |
	BuiltInAtom
;

PredicateAtom:
	fid=ID(args+=Term*)	
;

BuiltInAtom:
	Term SpecialBIA Term 
;

SpecialBIA:
	'<' | 
	'>' |
	'>=' |
	'<=' |
	'=' |
	'<>'	
;

Term:
	BasicTerm | 
	QuantifiedTerm 
;
	
QuqntifiedTerm:
	Quantifier type=p |
	'some' variable=TypedVariable
;
     
Quantifier:
	'every' | 
	'some'
;

